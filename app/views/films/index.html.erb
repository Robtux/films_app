<h1>Listing films</h1>

<table class="films table table-striped table-hover" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Duration</th>
      <th>Genre</th>
      <th>Director</th>
      <th>Description</th>
    <% if signed_in? %>
      <th></th>
      <th></th>
      <th></th>
    <% end %>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.duration %> min.</td>
        <td><%= film.genre.definition %></td>
        <td><%= film.director.name %> <%= film.director.surname %></td>
        <td><%= film.description %></td>
      <% if signed_in? %>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if signed_in? %>
  <%= link_to 'New Film', new_film_path %>
<% end %>

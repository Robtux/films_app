<h1>Listing genres</h1>

<table class="genres table table-striped table-hover">
  <thead>
    <tr>
      <th>Definition</th>
      <th>Note</th>
    <% if signed_in? %>
      <th></th>
      <th></th>
      <th></th>
    <% end %>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.definition %></td>
        <td><%= genre.note %></td>
      <% if signed_in? %>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if signed_in? %>
  <%= link_to 'New Genre', new_genre_path %>
<% end %>
